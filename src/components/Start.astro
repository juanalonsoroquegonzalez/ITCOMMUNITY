---
// CenteredContent.astro
const { imageSrc = "https://www.bizneo.com/blog/wp-content/uploads/2020/09/Desarrollo-profesional.jpg", imageAlt = "Imagen de ejemplo", text = "Discover innovative tools designed to enhance learning experiences. Empower students and educators with cutting-edge technology tailored for your academic institution.", buttonText = "Explorar soluciones" } = Astro.props;
---

<div class="flex flex-col items-center justify-center bg-white space-y-4 w-full">
    <!-- Contenedor con ancho mÃ¡ximo uniforme -->
    <div class="relative w-full">
      <!-- Imagen con fondo diagonal -->
      <div class="relative w-full h-96 overflow-hidden">
        <img src={imageSrc} alt={imageAlt} class="w-full h-full object-cover">
        <div class="absolute inset-0 bg-black opacity-50"></div> <!-- Oscurece la imagen -->
        
        <!-- Forma diagonal -->
        <div class="absolute bottom-0 left-0 w-full h-24 bg-white" style="clip-path: polygon(0 0, 100% 100%, 0 100%);"></div>
    
        <!-- Contenido sobre la imagen -->
        <div class="absolute inset-0 flex flex-col items-center justify-center text-center text-white px-6">
          <p class="font-headingtext-6xl font-bold font-sans text-4xl">Transform Education Today</p>
          <p class="font-sans text-2xl mt-2">{text}</p>
          <button class="mt-4 bg-transparent hover:bg-green-500 text-green-500 font-semibold hover:text-white py-2 px-6 border border-green-500 hover:border-transparent rounded">
            {buttonText}
          </button>
        </div>
      </div>
    </div>
    
  
  
</div>