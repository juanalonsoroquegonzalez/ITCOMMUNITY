<div class="bg-white py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto"> <!-- Contenedor principal centrado -->
        <div class="flex flex-col lg:flex-row lg:space-x-8 space-y-8 lg:space-y-0"> <!-- Flex en columnas para móvil y filas para desktop -->
            <!-- Columna 1: Formulario -->
            <div class="bg-white p-6 lg:w-1/2">
                <h2 class="text-green-600 font-semibold text-sm uppercase">GET IN TOUCH</h2>
                <h2 class="text-3xl font-bold mb-8">Connect with us for inquiries!</h2>
                <form class="space-y-6">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700">Name *</label>
                        <input type="text" id="name" name="name" placeholder="Jane Smith" class="mt-1 block w-full px-3 py-2 border border-gray-300 shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" required>
                    </div>

                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700">Email address *</label>
                        <input type="email" id="email" name="email" placeholder="janesmith@mail.com" class="mt-1 block w-full px-3 py-2 border border-gray-300 shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" required>
                    </div>

                    <div>
                        <label for="phone" class="block text-sm font-medium text-gray-700">Phone number *</label>
                        <input type="tel" id="phone" name="phone" placeholder="555-555-5555" class="mt-1 block w-full px-3 py-2 border border-gray-300 shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" required>
                    </div>

                    <div>
                        <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
                        <textarea id="message" name="message" rows="4" class="mt-1 block w-full px-3 py-2 border border-gray-300 shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"></textarea>
                    </div>

                    <div>
                        <button type="submit" class="transition-colors duration-300 inline-flex w-full justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Submit</button>
                    </div>
                </form>
            </div>

            <!-- Columna 2: Mapa e información -->
            <div class="bg-gray-100 p-6 shadow-md lg:w-1/2">
                <!-- Mapa de Google Maps -->
                <div>
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3771.328036682847!2d-98.203313684582!3d19.04302198710049!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85cfc0e5e5e5e5e5%3A0x5e5e5e5e5e5e5e5e!2sCalle%20Tecamachalco%2014%2C%20La%20Paz%2C%2072160%20Puebla%2C%20Pue.%2C%20M%C3%A9xico!5e0!3m2!1sen!2sus!4v1630000000000!5m2!1sen!2sus"
                        width="100%"
                        height="300"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        class="shadow-md"
                    ></iframe>
                </div>

                <!-- Información de ubicación -->
                <div class="mt-8">
                    <h2 class="font-semibold">Get in touch</h2>
                    <div class="flex items-center text-gray-600">
                        <!-- Icono de correo (Heroicons) -->
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                        <p class="underline">ituniversity@ituniversity.com.mx</p>
                    </div>
                </div>

                <div class="mt-8">
                    <p class="font-semibold">Location</p>
                    <div class="flex items-center text-gray-600">
                        <!-- Icono de ubicación (Heroicons) -->
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <p class="underline">Puebla, Puebla de Zaragoza, México</p>
                    </div>
                </div>

                <!-- Horarios -->
                <div class="mt-8">
                    <h2 class="font-semibold mb-4">Hours</h2>
                    <div class="grid grid-cols-1 gap-4">
                        <p class="text-gray-600">Monday: 9:00am - 10:00pm</p>
                        <p class="text-gray-600">Tuesday: 9:00am - 10:00pm</p>
                        <p class="text-gray-600">Wednesday: 9:00am - 10:00pm</p>
                        <p class="text-gray-600">Thursday: 9:00am - 10:00pm</p>
                        <p class="text-gray-600">Friday: 9:00am - 10:00pm</p>
                        <p class="text-gray-600">Saturday: 9:00am - 6:00pm</p>
                        <p class="text-gray-600">Sunday: 9:00am - 12:00pm</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>