import Header from '../components/Header.astro';
import '@fontsource-variable/nunito';

const { title = "Astro Basics" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
